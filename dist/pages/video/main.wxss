@import "../../common/vendor.wxss";

.textOverflow {
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.video-info {
  position: relative;
  top: 0;
  left: 0;
  width: 100%;
  height: auto;
}
.video-info .video-box {
  position: relative;
  top: 0;
  left: 0;
  width: 100%;
  height: 450rpx;
}
.video-info .tabBar {
  display: flex;
  position: relative;
  top: 0;
  left: 0;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  box-shadow: 0 2rpx 8rpx 0 rgba(0, 0, 0, 0.1);
  justify-content: center;
}
.video-info .tabBar-item {
  display: flex;
  flex: 1;
  font-size: 28rpx;
  color: #777777;
  justify-content: center;
}
.video-info .tabBar-item-active {
  border-bottom: 6rpx solid red;
  color: red;
}
.video-info .info-content {
  position: relative;
}
.video-info .info-content .introduction {
  position: relative;
  width: 100%;
  height: auto;
  padding: 40rpx;
  box-sizing: border-box;
}
.video-info .info-content .introduction-title {
  display: flex;
  padding: 0 0 40rpx;
  border-bottom: 2rpx solid #eee;
}
.video-info .info-content .introduction-title__name {
  flex: 1;
  font-size: 32rpx;
  color: #1A1A1A;
}
.video-info .info-content .introduction-title__num {
  flex: 0 0 auto;
  font-size: 20rpx;
  color: #808080;
}
.video-info .info-content .introduction-lable {
  font-size: 32rpx;
  padding: 20rpx 0;
}
.video-info .info-content .introduction-description,
.video-info .info-content .introduction-short_description {
  font-size: 26rpx;
  color: #777777;
  text-align: left;
  vertical-align: text-top;
  box-sizing: border-box;
}
.video-info .info-content .list-container {
  padding: 0 0 0 20rpx;
  position: relative;
}
.video-info .info-content .list-container .list-item {
  display: flex;
  align-items: center;
}
.video-info .info-content .list-container .list-item .video-icon {
  display: flex;
  flex: 0 0 auto;
  width: 32rpx;
  height: 32rpx;
  border: 2rpx solid #787878;
  align-items: center;
  justify-content: center;
  border-radius: 32rpx;
  margin-right: 20rpx;
  transform: rotate(-90deg);
}
.video-info .info-content .list-container .list-item .video-icon__img {
  flex: 0 0 auto;
  width: 20rpx;
  height: auto;
  position: relative;
  top: 3rpx;
}
.video-info .info-content .list-container .list-item .video-title {
  display: flex;
  flex: 1;
  font-size: 26rpx;
  line-height: 2.6;
  border-bottom: 2rpx solid #eee;
}
.video-info .info-content .comments-list {
  padding: 40rpx;
  box-sizing: border-box;
}
.video-info .info-content .comments-list .list-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #eee;
}
.video-info .info-content .comments-list .list-item .item-avatar {
  display: flex;
  flex: 0 0 auto;
  width: 60rpx;
  height: auto;
  border-radius: 40rpx;
  padding-right: 10rpx;
  box-sizing: border-box;
}
.video-info .info-content .comments-list .list-item .item-content {
  display: flex;
  flex: 1;
  position: relative;
  flex-direction: column;
}
.video-info .info-content .comments-list .list-item .item-content__name {
  position: relative;
  top: 0;
  left: 0;
  width: 100%;
  height: auto;
  font-size: 28rpx;
  color: darkslateblue;
}
.video-info .info-content .comments-list .list-item .item-content__time {
  position: relative;
  top: 0;
  right: 0;
  font-size: 20rpx;
  color: #808080;
}
.video-info .info-content .comments-list .list-item .item-content__content {
  position: relative;
  top: 0;
  left: 0;
  width: 100%;
  height: auto;
  padding: 10rpx 0;
  font-size: 24rpx;
  color: #1A1A1A;
}
.video-info .btn-submit {
  position: absolute;
  bottom: 40rpx;
  left: 50%;
  transform: translate(-50%, 0);
  font-size: 28rpx;
  color: #fff;
  width: 90rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  border-radius: 45rpx;
  background: #14b5fd;
  box-shadow: 0 2rpx 4rpx rgba(20, 181, 253, 0.7);
  z-index: 1;
  opacity: 0.86;
}
.video-info .c-red {
  color: red;
}