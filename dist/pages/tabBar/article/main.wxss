@import "../../../common/vendor.wxss";

.textOverflow {
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.article {
  padding: 0 40rpx;
  font-size: 32rpx;
  box-sizing: border-box;
}
.article .container {
  display: flex;
  flex-direction: column;
  padding: 40rpx 40rpx 40rpx 0;
  justify-content: flex-start;
}
.article .container .list-item {
  display: flex;
  width: 100%;
  flex: 1;
  text-align: left;
  line-height: 2;
  padding-bottom: 26rpx;
  border-bottom: 2rpx solid #eee;
}
.article .container .list-item .cate_avatar {
  display: inline-block;
  flex: 0 0 auto;
  width: 140rpx;
  height: 140rpx;
}
.article .container .list-item .cate_content {
  flex: 1;
  padding: 0 40rpx;
  box-sizing: border-box;
  overflow: hidden;
}
.article .container .list-item .cate_content_name {
  color: #111;
  font-size: 36rpx;
  line-height: 1;
}
.article .container .list-item .cate_content_info {
  color: #808080;
  font-size: 26rpx;
  margin-top: 10rpx;
}
.article .container .list-item .cate_content_other {
  color: #808080;
  font-size: 24rpx;
}