@import "../../../common/vendor.wxss";

.textOverflow {
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.person {
  position: relative;
}
.person .header {
  position: relative;
  top: 0;
  left: 0;
  width: 100%;
  height: auto;
  padding: 40rpx 40rpx;
  box-sizing: border-box;
}
.person .header .bg-img {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  filter: blur(6rpx) brightness(90%) opacity(0.8);
}
.person .header .bg-img ._img {
  width: 100%;
  height: 100%;
}
.person .header .user-msg-card {
  width: 100%;
  height: 242rpx;
  position: relative;
  top: 0;
  left: 0;
  padding: 48rpx 40rpx 30rpx;
  box-sizing: border-box;
  box-shadow: 0 2rpx 8rpx 0 rgba(0, 0, 0, 0.1);
  border-radius: 8rpx;
  background: #555060;
}
.person .header .user-msg-card .top {
  display: flex;
  position: relative;
  top: 0;
  left: 0;
  justify-content: space-around;
  align-items: flex-start;
}
.person .header .user-msg-card .top .organ-name {
  flex: 1 1 auto;
  text-align: left;
  font-size: 40rpx!important;
  font-family: PingFangSC-Medium;
  color: #fff;
}
.person .header .user-msg-card .top .avatar {
  flex: 0 0 100rpx;
  text-align: right;
}
.person .header .user-msg-card .top .avatar .avavtao-img {
  display: inline-block;
  width: 100rpx;
  height: 100rpx;
  border-radius: 8rpx;
}
.person .user {
  position: relative;
  left: 0;
  top: 0;
  box-sizing: border-box;
  padding: 40rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  align-items: center;
  width: 100%;
  justify-content: space-between;
}
.person .lagout-btn {
  position: relative;
  top: 0;
  left: 0;
  margin: 0 40rpx;
  color: #373737;
  background: #fff;
}
.info {
  width: 100%;
}
.info .info-item {
  height: 78rpx;
  text-align: left;
  font-size: 32rpx;
  font-family: PingFangSC-Regular;
  color: #1A1A1A;
  line-height: 44rpx;
  margin-bottom: 34rpx;
  border-bottom: 2rpx solid #E1E1E1;
}
.info .info-item .info-item-content {
  float: right;
  font-size: 28rpx;
  color: #808080;
}
.info .info-item .info-item-content .turn-right-icon {
  display: inline-block;
  width: 28rpx;
  height: auto;
}