@import "../../common/vendor.wxss";

.textOverflow {
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.vip-list .container {
  display: flex;
  flex-direction: column;
  padding: 40rpx;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: wrap;
  box-sizing: border-box;
}
.vip-list .container .list-item {
  flex: 1;
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  margin-bottom: 40rpx;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 16rpx 0 rgba(0, 0, 0, 0.3);
  background: linear-gradient(to left top, #ea7c3e, #ad1a8b);
}
.vip-list .container .list-item .item-name {
  display: block;
  width: 100%;
  color: #ffe5db;
}
.vip-list .container .list-item .item-content {
  display: flex;
  width: 100%;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 0;
}
.vip-list .container .list-item .item-content__price {
  flex: 1;
  color: #ff9900;
  font-size: 44rpx;
}
.vip-list .container .list-item .item-content__price .item-content__date {
  font-size: 28rpx;
  color: #ffe5db;
}
.vip-list .container .list-item .item-content__btn {
  flex: 0 0 auto;
  font-size: 28rpx;
  background: linear-gradient(to left top, red, #6f00ff);
  border-top-right-radius: 60rpx;
  border-bottom-right-radius: 60rpx;
  color: #fff;
  padding: 10rpx 40rpx;
  line-height: 2;
  border: none;
}
.vip-list .container .list-item .item-description {
  width: 100%;
  font-size: 24rpx;
  color: #ffe5db;
}