
.card {
  display: flex;
  padding: 20rpx;
  flex-wrap: wrap;
}
.card .img-box {
  width: 100%;
  height: 160rpx;
  border: 2rpx solid red;
}
.card .card-img {
  width: 100%;
  height: auto;
  border-radius: 20rpx;
}
.card .card-text {
  width: 100%;
  font: 28rpx;
  color: #666666;
}
.textOverflow {
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.course-card {
  display: flex;
  width: 100%;
  margin-bottom: 40rpx;
}
.course-card .card-img {
  flex: 0 0 auto;
}
.course-card .card-img ._img {
  width: 240rpx;
  height: 160rpx;
  border-radius: 10rpx;
  box-shadow: 0rpx 2rpx 6rpx rgba(0, 0, 0, 0.1);
}
.course-card .card-info {
  display: flex;
  flex: 1;
  padding-left: 20rpx;
  margin-bottom: -10rpx;
  flex-direction: column;
  justify-content: space-between;
  border-bottom: 2rpx solid #eee;
}
.course-card .card-info__name {
  font-size: 32rpx;
}
.course-card .card-info__desc {
  font-size: 24rpx;
  color: #808080;
}
.course-card .card-info__oth {
  font-size: 24rpx;
  color: #ff9900;
  margin-bottom: 20rpx;
}